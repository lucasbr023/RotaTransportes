<% provide(:title, @user.name) %>
  <div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
<br>
        <div class="col-md-8">

<% if @user.routes.any? %>

      <h3>Minhas rotas (<%= @user.routes.count %>)</h3>
      <br>
<p>
    <ul class="routes">

          <% @user.routes.each do |route| %>
    
          <li><%= "#{route.origem} - #{route.destino} - #{route.tipo} - #{route.data} - #{route.obs}" %> </li>
            </ul>
    <% end %>
    <% end %>
   </p>  
              </div>

</div>

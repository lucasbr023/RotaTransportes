<%- model_class = User -%>
<div class="page-header">
  <h1>Todos os usuários</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:cpf) %></th>
      <th><%= model_class.human_attribute_name(:cidade) %></th>
      <th><%= model_class.human_attribute_name(:telefone) %></th>
      <th><%= model_class.human_attribute_name(:endereco) %></th>
      <th><%= model_class.human_attribute_name(:rg) %></th>
      <th><%= model_class.human_attribute_name(:cnh) %></th>
      <th><%= model_class.human_attribute_name(:password) %></th>
      <th><%= model_class.human_attribute_name(:admin) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.Opções', :default => t("helpers.opções") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.cpf %></td>
        <td><%= user.cidade %></td>
        <td><%= user.telefone %></td>
        <td><%= user.endereco %></td>
        <td><%= user.rg %></td>
        <td><%= user.cnh %></td>
        <td><%= user.password %></td>
        <td><%= user.admin %></td>
        <td><%=l user.created_at %></td>
        <td>

          <%= link_to t('.editar', :default => t("helpers.links.editar")),
                      edit_user_path(user), :class => 'btn btn-default btn-xs' %>

                      <%= link_to "Visualizar", user_path(user), class: "btn btn-primary btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.Novo usuário', :default => t("helpers.links.Novo Usuário")),
            new_user_path,
            :class => 'btn btn-primary' %>

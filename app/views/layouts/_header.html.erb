<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
      <br>
    <%= link_to "Rotas Community", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Rotas", routes_path %></li>
      
          


        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Perfil <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Minhas Rotas", current_user %></li>
              <% if current_user.admin? %>
              <li><%= link_to "Adicionar Rota", new_route_path %></li>
              <% end%>
              <li><%= link_to "Editar perfil", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
        
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
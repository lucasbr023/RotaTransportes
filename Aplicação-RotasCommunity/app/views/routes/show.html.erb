  <dd><%= @route.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pagamento) %>:</strong></dt>
  <dd><%= @route.pagamento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:frete) %>:</strong></dt>
  <dd><%= @route.frete %></dd>
</dl>

<%= link_to t('.Voltar', :default => t("helpers.links.Voltar")),
              routes_path, :class => 'btn btn-default'  %>

  <% if logged_in? && current_user.admin? %>
<%= link_to t('.editar', :default => t("helpers.links.editar")),
edit_route_path(@route), :class => 'btn btn-default' %>

<% end %>


        <% if logged_in? %>

                <%= link_to "Seguir esta Rota", static_pages_seguir_path(:route => @route.id), class: "btn btn-primary btn-sm" %>

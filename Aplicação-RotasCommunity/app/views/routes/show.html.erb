  <dd><%= @route.origem %></dd>
  <dt><strong><%= model_class.human_attribute_name(:destino) %>:</strong></dt>
  <dd><%= @route.destino %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @route.data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @route.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:obs) %>:</strong></dt>
  <dd><%= @route.obs %></dd>
